{
  "name": "lighthouse-local",
  "version": "1.0.0",
  "description": "Check Web Applications Performance Locally!",
  "main": "index.js",
  "keywords": [],
  "author": "Michael Angelo Larrubis",
  "license": "ISC",
  "scripts": {
    "serve": "nodemon server.ts",
    "check:types": "tsc --pretty --noEmit",
    "check:lint": "eslint *.ts src/**/*.ts --fix && eslint *.ts src/**/*.ts",
    "check:format": "prettier --write . && prettier --check .",
    "check:all": "npm run check:types && npm run check:lint && npm run check:format",
    "check:commitmsg": "node node_modules/commitmsg .git/COMMIT_EDITMSG",
    "prepare-husky": "husky install && chmod ug+x .husky/*"
  },
  "commitmsg": {
    "limits": {
      "firstLine": "72",
      "otherLine": "80"
    },
    "style": "jquery",
    "component": true,
    "components": [
      "Build",
      "Fix",
      "Develop",
      "Refactor",
      "Delete",
      "Merge",
      "Test",
      "Update"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.1",
    "husky": "^7.0.2",
    "nodemon": "^2.0.13",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "add": "^2.0.6",
    "commitmsg": "^1.0.2",
    "eslint": "^7.32.0",
    "express": "^4.17.1",
    "prettier": "^2.4.1"
  }
}
